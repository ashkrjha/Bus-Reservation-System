<%- include("./partials/header"); -%> 
 
    
<div class="container">
	<div class="jumbotron" >
		<h1><i class="fas fa-bus-alt"></i> List Of Buses from <%= source %> to <%= destination %></h1>
	</div>
</div>
        <% for(let b of results){%>  
            <div class="row justify-content-around">
                <div class="col-8 text-center bg-light m-3 p-2">
                    <div class="row">
                        <div class="col-6">
                            <h2>Bus Number: <%=b.bid%></h2>
                        </div>
                        <div class="col-6">
                            <p><%=b.dept_time%> : <%=b.arr_time%></p>
                        </div>
                    </div>
                    
                    <p><%=b.name%></p>
                    
                    <form action="bus/<%=b.bid%>" method="get">
                        <button class="btn btn-xs btn-success">More Info</button>
                    </form> 
                </div>
            </div>
        <%}%>
    
<%- include("./partials/footer"); -%> 
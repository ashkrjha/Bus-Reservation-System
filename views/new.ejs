<%- include("./partials/header"); -%>
    <div class="container mt-5">
        <div class="row">
          <div class="col"></div>
          <div class="col-sm-7 col-md-6 col-lg-5">
            <div class="card shadow border-0">
              <div class="card-body">
                <h1 class="text-center">ENTER THE DETAILS</h1>
                <h2 class="text-center">Bus Number : <%= results1[0].bid %></h2>
                <h2 class="text-center"><%= results2[0].src %> -> <%= results2[0].dest %></h2>
                <form class="needs-validation" action="/bus/<%= results1[0].bid %>" method="POST" >
                  <div class="form-group">
                    <input type="text" placeholder="Name" name="name" required>
                    <div class="invalid-feedback">
                      Please enter your name.
                    </div>
                  </div>
                  <div class="form-group">
                    <input type="number" placeholder="Age" name="age" min="0" max="125" required>
                    <div class="invalid-feedback">
                      Please enter your age.
                    </div>
                  </div>
                  <div class="form-group">
                    <select name="gender" required>
                        <option value="" disabled selected>Gender</option>
                        <option value="M">M</option>
                        <option value="F">F</option>
                      </select>
                    <div class="invalid-feedback">
                      Please enter your age.
                    </div>
                  </div>
                  <button type="submit" class="btn btn-danger btn-block">Click to Book</button>
                </form>
              </div>
            </div>
          </div>
          <div class="col"> </div>
        </div>
      </div>


<%- include("./partials/footer"); -%>
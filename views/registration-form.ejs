<form method="post" action="register">
  <div class="container">
  <h1>Register Here</h1>
  <p>Please fill in the details to create an account with us.</p>
  <hr>
  <p>
    <label for=first_name><b>Enter First_Name</b></label>
    <input type="text" placeholder="Enter First Name" name="first_name" required>
  </p>
  <p>
    <label for=last_name><b>Enter Last_Name</b></label>
    <input type="text" placeholder="Enter Last Name" name="last_name" required>
  </p>
  <p>
    <label for="email"><b>Enter Email</b></label>
    <input type="text" placeholder="Enter Email" name="email_address" required>
  </p>
  <p>
    <label for="pwd"><b>Password</b></label>
    <input type="password" placeholder="Enter Password" name="password" required>
  </p>
  <p>
    <label for="confirm"><b>Confirm Password</b></label>
    <input type="password" placeholder="Confirm Password" name="confirm_password" required>
  </p>
  <hr>
  <div><input type="radio" value="male" name="gender" required><label>Male</label>
    <input type="radio" value="female" name="gender" required><label>Female</label>
  </div>
  <!-- <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p> -->
  <button type="submit" class="registerbtn"><strong>Register</strong></button>
  </div>
  <div class="container signin">
  <p>Already have an account? <a href="/login">Sign in</a>.</p>
  </div>
  </form>

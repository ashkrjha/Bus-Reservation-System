<%- include("./partials/header"); -%>

<h1 class="text-center m-4">DETAILS OF BUS NUMBER <%= results[0].bid %></h1>

<div class="row justify-content-center">
    <div class="card text-center" style="width: 30rem;">
        <img class="card-img-top" src="/images/bus2.jpg" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title"><p>Bus Name : <%=results[0].name%></p></h5>
            <p class="card-text">Number of Seats :<%=results[0].seats%>
                <br>Bus Number : <%=results[0].number%>
                <br>Bus Timings: <%=results[0].dept_time%> - <%=results[0].arr_time%></br>
            </p>
            <form action="/bus/<%= results[0].bid %>/new" method="GET">
                <button class="btn btn-xs btn-danger">Book Ticket</button>
            </form>
        </div>
    </div>
</div>


<%- include("./partials/footer"); -%>